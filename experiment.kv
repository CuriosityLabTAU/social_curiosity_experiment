<Config>:
# Naos ip and location configuration and subject id
    orientation:'vertical'
    BoxLayout:
        size_hint_y:0.05
        padding:'5dp'
        spacing:'5dp'
        Label:
            text:'SetUp screen'
            font_size:30

            color:0,0,0,1


    BoxLayout:
        size_hint_y:0.2
        Image:
            padding_x: 1
            padding_y: 1
            size_hint: None, None
            size: 150, 150
            source: 'nao_site_down.jpg'

    BoxLayout:
        size_hint_y:0.05

        TextInput:
            id:nao_ip_1
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"192.168.0.100"
            font_size:20
            color:0,0,0,1

    BoxLayout:
        size_hint_y:0.2
        Image:
            padding_x: 1
            padding_y: 1
            size_hint: None, None
            size: 150, 150
            source: 'nao_site_down.jpg'

        Image:
            padding_x: 1
            padding_y: 1
            size_hint: None, None
            size: 150, 150
            source: 'nao_site_down.jpg'


    BoxLayout:
        size_hint_y:0.05

        TextInput:
            id:nao_ip_1
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"192.168.0.100"
            font_size:20
            color:0,0,0,1

        TextInput:
            id:nao_ip_2
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2
            text:"192.168.0.100"
            font_size:20
            color:0,0,0,1





    BoxLayout:
        size_hint_y:0.05


        Label:
            pos_hint: {'left':0.2,"right": 0.8, 'top':1}
            padding_x: self.width/3
            text:"Subject ID"
            font_size:20
            color:0,0,0,1

        TextInput:
            id:subject_id
            padding_x: self.width/3
            padding_y: ( self.height - self.line_height ) / 2.5
            text:"0"
            font_size:20
            color:0,0,0,1

    BoxLayout:
        size_hint_y:0.05
        Button:
            text:"Start"
            color:0,0,0,1
            font_size:30
            bold: True
            on_press: self.background_color = (1,0,0,1)
            on_release: app.btn_released(self, app.start ,subject_id,nao_ip)  # function to be called when button is pressed

